<form action="/manager/owner/<%= @owner.id %>" method="post">

  <label for="name">Owner Name:</label>
  <input type="text" name="name" id="name" value="<%= @owner.name%>"/>

  <label for="animal_id">Animal:</label>

    <select name="animal_id" id="animal_id" selected="<%= @owner.animal_id %>">

    <% for animal in @animals %>
      <option value="<%=animal.id%>"
        <%= "selected" if @owner.animal_id == animal.id %>>
        <%=animal.name%>
      </option>
    <% end %>

    </select>

  <input type="submit" value="Edit Owner">

</form>
